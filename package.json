{
	"name": "@natlibfi/melinda-rest-api-validator",
	"description": "API microservice of Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/NatLibFi/melinda-rest-api-validator",
	"bugs": {
		"url": "https://github.com/NatLibFi/melinda-rest-api-validator/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:NatLibFi/melinda-rest-api-validator.git"
	},
	"license": "AGPL-3.0+",
	"version": "3.3.8-alpha.1",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"private": true,
	"scripts": {
		"start": "node ./dist/index",
		"start:dev": "babel-node ./src/index",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js && npm run coverage",
		"test:dev": "npm run lint:dev && npm run test:base -- src/**/*.spec.js",
		"_test:dev": "npm run lint:dev && npm run test:base -- src/**/*.spec.js && npm run coverage",
		"coverage": "nyc check-coverage --per-file --reporter=text",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist --minified",
		"dev": "NODE_ENV=development cross-env nodemon"
	},
	"dependencies": {
		"@babel/runtime": "^7.21.5",
		"@natlibfi/marc-record": "7.2.2",
		"@natlibfi/marc-record-merge": "7.0.0-alpha.1",
		"@natlibfi/marc-record-serializers": "^10.0.4",
		"@natlibfi/marc-record-validate": "^8.0.0",
		"@natlibfi/marc-record-validators-melinda": "^10.7.1",
		"@natlibfi/melinda-backend-commons": "^2.2.0",
		"@natlibfi/melinda-commons": "^13.0.4",
		"@natlibfi/melinda-marc-record-merge-reducers": "^2.0.4",
		"@natlibfi/melinda-record-match-validator": "^2.0.4",
		"@natlibfi/melinda-record-matching": "^4.1.2",
		"@natlibfi/melinda-rest-api-commons": "^4.0.5-alpha.1",
		"@natlibfi/sru-client": "^6.0.2",
		"deep-eql": "^4.1.3",
		"deep-object-diff": "^1.1.9",
		"http-status": "^1.6.2",
		"moment": "^2.29.4"
	},
	"devDependencies": {
		"@babel/cli": "^7.21.5",
		"@babel/core": "^7.21.8",
		"@babel/eslint-parser": "^7.21.8",
		"@babel/node": "^7.20.7",
		"@babel/preset-env": "^7.21.5",
		"@babel/register": "^7.21.0",
		"@natlibfi/eslint-config-melinda-backend": "^3.0.0",
		"@natlibfi/fixugen-http-server": "^1.1.2",
		"@natlibfi/fixura": "^3.0.0",
		"babel-plugin-istanbul": "^6.1.1",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.3.7",
		"chai-http": "^4.3.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.40.0",
		"mocha": "^10.2.0",
		"mock-fs": "^5.2.0",
		"nodemon": "^2.0.22",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"include": [
			"src/**/*.js",
			"src/*.js"
		],
		"exclude": [
			"**/*.spec.js",
			"src/utils.js"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	},
	"nodemonConfig": {
		"exec": "npm run test:dev && npm run start:dev",
		"watch": [
			"src/*"
		],
		"ext": "js",
		"delay": 2.5
	}
}
